require __DIR__ . '/../framework/bootstrap.php';
$testInitParams = \Magento\TestFramework\Helper\Bootstrap::getInstance()->getAppInitParams();
$bootstrap = \Magento\Framework\App\Bootstrap::create(BP, $testInitParams);
/** @var \Magento\GraphQl\App\GraphQl $app */
$app = $bootstrap->createApplication(
        \Magento\GraphQl\App\GraphQl::class,
        ['data' => ['initParams' => $testInitParams]]
);
$bootstrap->run($app);
$app->listen();
